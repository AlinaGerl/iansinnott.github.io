black = #2d2d2d
transition(prop = transform, duration = 0.8s, easing = cubic-bezier(0, 0, 0.25, 1))
  transition prop duration easing

reset-button()
  appearance none
  outline none
  background transparent
  border none

#header
  height 60px

  .main-nav-link
    position relative
    text-shadow none
    font-size 30px
    padding-left 70px
    color #3A4145
    text-decoration none
    line-height 60px

    img
      display inline-block
      position absolute
      border-radius 50%
      left 0
      top -5px
      margin 0 .8rem 0 0
      width 50px
      padding 3px
      box-shadow 0 0 1px rgba(0,0,0,.8)

  .main-nav
    display flex
    aligh-items center
    a
      display block
      line-height 50px

  .toggle
    reset-button()
    display none
    align-items center
    position absolute
    top 0
    left 0
    padding-top 10px
    padding-bottom 10px
    font-size 24px
    text-transform uppercase
    transform translateX(-99%)
    color black
    @media mq-mobile
      display flex

  .text
    margin-right 10px

  .burger
    width 34px
    height @width
    padding 5px
    background black
    display flex
    flex-direction column
    justify-content space-around
    border-radius 5px 0 0 5px
    cursor pointer
    span
      display block
      width 100%
      height 3px
      border-radius 5px
      background darken(white, 40%)

  .hidden-nav
    transition()
    position fixed
    right 0
    top 0
    bottom 0
    background #2d2d2d
    width 200px
    transform translateX((@width * .7))
    @media mq-mobile
      transform translateX(100%)
    &.open
      transform translateX(0)

      .face
        opacity 1

    hr
      border none
      border-bottom 1px solid #4d4d54

    a
      display block
      text-align left
      padding 15px 0
      padding-left 70px
      color #cbcbcb
      position relative
      text-decoration none
      &:hover
        background #37373b
        color white
        i
          transform translateY(-50%) scale(1.2)


      i
        position absolute
        top 50%
        left 25px
        transform translateY(-50%)

  .face
    transition(opacity)
    opacity 0
    position absolute
    bottom 20px
    left 50%
    transform translateX(-50%)
    text-align center
    color #D6DBE0
    font-size 24px
    img
      border-radius 50%
      display block
      margin 0 auto
      margin-bottom 20px
      border 3px solid @color

